<Window x:Class="WpfApp.Windows.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Zarządzaj użytkownikami" Height="450" Width="800">
    <Grid Background="BlanchedAlmond" >

        <DataGrid Name="UsersDataGrid" Margin="0,0,300,0" SelectionChanged="UsersDataGrid_SelectionChanged" AutoGenerateColumns="False" IsReadOnly="True" Background="#FFFDD8A1" >
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="userLoginColumn" Binding="{Binding Login}" Header="Login" Width="60"/>
                <DataGridTextColumn x:Name="userRankColumn" Binding="{Binding RoleName}" Header="Ranga" Width="100"/>
                <DataGridTextColumn x:Name="userFirstNameColumn" Binding="{Binding FirstName}" Header="Imię" Width="*"/>
                <DataGridTextColumn x:Name="userSecondNameColumn" Binding="{Binding LastName}" Header="Nazwisko" Width="*"/>
                <DataGridTextColumn x:Name="userStatusColumn" Binding="{Binding Status}" Header="Status" Width="75"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Visibility="Hidden" Name="UserUpdateCommandGrid" HorizontalAlignment="Left" Height="auto" VerticalAlignment="Top" Margin="550,64,0,0">
            <TextBlock Text="Zarządzaj użytkownikiem:" Height="30" TextAlignment="Center" HorizontalAlignment="Left" Width="200" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
            <Button Name="ChangeLoginButton" Content="Zmień login" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="200" Margin="0,35,0,0" FontWeight="Bold" FontSize="14" FontFamily="Arial" Click="ChangeLoginButton_Click"/>
            <Button Name="ChangePasswordButton" Content="Zmień hasło" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="200" Margin="0,80,0,0" FontWeight="Bold" FontSize="14" FontFamily="Arial" Click="ChangePasswordButton_Click"/>
            <Button Name="ChangeNamesButton" Content="Zmień dane osobowe" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="200" Margin="0,125,0,0" FontWeight="Bold" FontSize="14" FontFamily="Arial" Click="ChangeNamesButton_Click"/>
            <Button Name="ChangeRankButton" Content="Zmień rangę" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="200" Margin="0,170,0,0" FontWeight="Bold" FontSize="14" FontFamily="Arial" Click="ChangeRankButton_Click"/>
            <Button Name="ActivateUserButton" Content="Zdezaktywuj użytkownika" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="200" Margin="0,215,0,0" FontWeight="Bold" FontSize="14" FontFamily="Arial" Click="ActivateUserButton_Click"/>
        </Grid>

        <Grid Visibility="Hidden" Name="ChangeLoginGrid" HorizontalAlignment="Left" Height="151" VerticalAlignment="Center" Margin="525,0,0,0">
            <TextBlock x:Name="LoginChangeDescription" HorizontalAlignment="Left" Width="250" TextAlignment="Center" Height="50" TextWrapping="Wrap" Text="Zmiana loginu: &#xA;Login - Imie Nazwisko (ID: 0)" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
            <TextBlock HorizontalAlignment="Left" Margin="0,61,0,0" Width="250" TextAlignment="Center" Height="25" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"><Run Language="pl-pl" Text="Podaj nowy login:"/></TextBlock>
            <TextBox x:Name="NewLoginTextBox" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="0,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="30"/>
            <Button x:Name="ConfirmLoginChangeButton" Content="Zatwierdź" HorizontalAlignment="Left" Margin="75,126,0,0" VerticalAlignment="Top" Height="25" Width="100" Click="ConfirmLoginChangeButton_Click"/>
        </Grid>

        <Grid Visibility="Hidden" Name="ChangeNamesGrid" HorizontalAlignment="Left" Height="auto" VerticalAlignment="Center" Margin="525,0,0,0">
            <TextBlock x:Name="NamesChangeDescription" HorizontalAlignment="Left" Width="250" TextAlignment="Center" Height="50" TextWrapping="Wrap" Text="Zmiana danych osobowych: &#xA;Login - Imie Nazwisko (ID: 0)" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,50,0,0" Width="250" TextAlignment="Center" Height="25" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"><Run Language="pl-pl" Text="Imię:"/></TextBlock>
            <TextBox x:Name="NewFirstNameTextBox" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="30"/>
            <TextBox x:Name="NewLastNameTextBox" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="30"/>
            <Button x:Name="ConfirmNamesChangeButton" Content="Zatwierdź" HorizontalAlignment="Center" Margin="0,187,0,0" VerticalAlignment="Top" Height="25" Width="100" Click="ConfirmNamesChangeButton_Click"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,111,0,0" Width="250" TextAlignment="Center" Height="25" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"><Run Language="pl-pl" Text="Nazwisko"/><Run Text=":"/></TextBlock>
        </Grid>

        <Grid Visibility="Hidden" Name="ChangePasswordGrid" HorizontalAlignment="Left" Height="191" VerticalAlignment="Center" Margin="525,0,0,0">
            <TextBlock x:Name="PasswordChangeDescription" HorizontalAlignment="Center" Width="250" TextAlignment="Center" Height="50" TextWrapping="Wrap" Text="Zmiana hasła: &#xA;Login - Imie Nazwisko (ID: 0)" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Margin="0,11,0,0"/>
            <TextBlock HorizontalAlignment="Left" Margin="0,61,0,0" Width="250" TextAlignment="Center" Height="25" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"><Run Language="pl-pl" Text="Wprowadź nowe hasło:"/></TextBlock>
            <PasswordBox x:Name="NewPasswordBox" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left"  Margin="0,91,0,0" VerticalAlignment="Top" Width="250" Height="30"/>
            <PasswordBox x:Name="ConfirmPasswordBox" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,126,0,0"  VerticalAlignment="Top" Width="250" Height="30"/>
            <Button Name="ConfirmPasswordChangeButton" Content="Zatwierdź" HorizontalAlignment="Center" Margin="0,161,0,0" VerticalAlignment="Top" Height="25" Width="100" Click="ConfirmPasswordChangeButton_Click"/>
        </Grid>

        <Grid Visibility="Hidden" Name="ChangeRoleGrid" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="525,0,0,0">
            <TextBlock x:Name="RoleChangeDescription" HorizontalAlignment="Center" Width="250" TextAlignment="Center" Height="50" TextWrapping="Wrap" Text="Zmiana roli: &#xA;Login - Imie Nazwisko (ID: 0)" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Margin="0,11,0,0"/>
            <TextBlock HorizontalAlignment="Left" Margin="0,60,0,0" Width="100" TextAlignment="Right" Height="25" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"><Run Language="pl-pl" Text="Wybierz rolę:"/></TextBlock>
            <ComboBox Name="RoleSelectionComboBox" HorizontalAlignment="Right" Margin="0,60,5,0" VerticalAlignment="Top" Width="130"/>
            <Button Name="ConfirmRoleChangeButton" Content="Zatwierdź" HorizontalAlignment="Left" Margin="0,90,0,0" VerticalAlignment="Top" Height="25" Width="100" Click="ConfirmRoleChangeButton_Click"/>
        </Grid>
        
        <Button Name="CancelButton" Content="Anuluj" HorizontalAlignment="Left" Margin="631,385,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.101,0.403" Click="CancelButton_Click" Height="25" Width="50" FontWeight="Bold"/>
        <Button Visibility="Hidden" Name="AddUserButton" Content="Dodaj nowego użytkownika" HorizontalAlignment="Left" Margin="550,172,0,0" VerticalAlignment="Top" Click="AddUserButton_Click" Height="40" Width="200" FontWeight="Bold" FontSize="14"/>
        
        <Grid Name="AddNewUserGrid" HorizontalAlignment="Left" Height="223" Margin="525,81,0,0" VerticalAlignment="Top" Width="250">
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="25" FontWeight="Bold" FontSize="16" TextAlignment="Center"><Run Language="pl-pl" Text="Nowy użytkownik:"/></TextBlock>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="80" FontWeight="Bold" Margin="0,30,0,0"><Run Language="pl-pl" Text="Login:"/></TextBlock>
            <TextBox x:Name="LoginTextBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" Height="20" Margin="90,30,0,0"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="80" FontWeight="Bold" Margin="0,55,0,0"><Run Language="pl-pl" Text="Imię"/><Run Text=":"/></TextBlock>
            <TextBox x:Name="FirstNameTextBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" Height="20" Margin="90,55,0,0"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="80" FontWeight="Bold" Margin="0,80,0,0"><Run Language="pl-pl" Text="Nazwisko"/><Run Text=":"/></TextBlock>
            <TextBox x:Name="LastNameTextBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" Height="20" Margin="90,80,0,0"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="80" FontWeight="Bold" Margin="0,105,0,0"><Run Language="pl-pl" Text="Hasło"/><Run Text=":"/></TextBlock>
            <PasswordBox x:Name="FirstPasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" Height="20" Margin="90,105,0,0"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="80" FontWeight="Bold" Margin="0,130,0,0"><Run Language="pl-pl" Text="Hasło"/><Run Text=":"/></TextBlock>
            <PasswordBox x:Name="SecondPasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" Height="20" Margin="90,130,0,0"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="80" FontWeight="Bold" Margin="0,155,0,0"><Run Language="pl-pl" Text="Ranga"/><Run Text=":"/></TextBlock>
            <ComboBox x:Name="RoleComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" Height="20" RenderTransformOrigin="0.267,-0.362" Margin="90,155,0,0"/>
            <Button x:Name="ConfirmNewUserButton" Content="Zatwierdź" HorizontalAlignment="Center" Margin="0,193,0,0" VerticalAlignment="Top" Height="30" Width="150" FontWeight="Bold" FontSize="14" Click="ConfirmNewUserButton_Click"/>
        </Grid>
    </Grid>
</Window>
